
<div class="grid grid-cols-3 gap-4">
  <div></div>

  <div>
    <%= image_tag 'micolet-logo.svg', width: '240', class: 'mx-auto' %>
    <p class="font-serif text-center text-slate-600"><%= t('landing.logo_text') %></p>

    <h4 class="font-serif text-center font-extrabold text-neutral-700 mt-10"><%= t('landing.welcome_text') %></h4>
    <h4 class="font-serif text-center font-extrabold text-neutral-700 mb-5"><%= t('landing.subscribe_text') %></h4>

    <%= simple_form_for @lead, data: { turbo: false } do |f| %>
      <%= f.label t('landing.email_label'), class: 'font-serif text-slate-600' %>
      <%= f.input_field :email, placeholder: t('landing.email_placeholder'),
        class: 'block w-full rounded-md border-0 py-1.5 px-2 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 focus:outline-none focus:ring-2 focus:ring-inset focus:ring-green-600 font-serif' %>
      <%= f.error :email, id: 'email_error', class: 'text-sm text-red-600' %>

      <%= f.label t('landing.preferences_label'), class: 'block mt-5 font-serif text-slate-600' %>
      <%= f.input_field :women, inline_label: t('landing.women_label') %><br />
      <%= f.input_field :men, inline_label: t('landing.men_label') %><br />
      <%= f.input_field :children, inline_label: t('landing.children_label') %><br />
      
      <% if @lead.errors[:base].any? %>
        <div class="text-sm text-red-600">
          <%= @lead.errors.full_messages_for(:base).first %>
        </div>
      <% end %>

      <%= f.button :submit, t('landing.subscribe_btn'), class: 'mt-5 bg-green-500 hover:bg-green-400 text-white p-2 rounded block mx-auto font-serif' %>
    <% end %>  
  </div>

  <div></div>  
</div>
